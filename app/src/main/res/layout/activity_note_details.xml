<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_primary"
    android:padding="16dp"
    tools:context=".NoteDetailsActivity">

    <RelativeLayout
        android:id="@+id/title_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/page_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add New Note"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/save_note_btn"
            android:layout_width="48dp"
            android:layout_height="49dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Save Note"
            android:src="@drawable/ic_baseline_done_24"
            app:tint="@color/white" />

        <Spinner
            android:id="@+id/font_size_spinner"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@id/page_title"
            android:layout_marginTop="16dp" />

        <Spinner
            android:id="@+id/font_color_spinner"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@id/font_size_spinner"
            android:layout_marginTop="16dp" />

        <Spinner
            android:id="@+id/background_color_spinner"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@id/font_color_spinner"
            android:layout_marginTop="16dp" />

        <!-- Font Color Button -->
        <Button
            android:id="@+id/font_color_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/font_size_spinner"
            android:layout_marginTop="16dp"
            android:text="Font Color" />

        <!-- Background Color Button -->
        <Button
            android:id="@+id/background_color_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/font_color_button"
            android:layout_marginTop="16dp"
            android:text="Background Color" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_bar_layout"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginVertical="26dp"
        android:backgroundTint="@color/white"
        android:background="@drawable/rounded_corner">

        <EditText
            android:id="@+id/notes_title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:hint="Title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:padding="12dp" />

        <EditText
            android:id="@+id/notes_content_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:hint="Content"
            android:minLines="15"
            android:gravity="top"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:padding="12dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/delete_note_text_view_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="Delete note"
        android:textColor="#FF0000"
        android:textSize="18sp"
        android:visibility="gone" />

</RelativeLayout>
